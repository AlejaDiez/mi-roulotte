{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["build"],
    "compilerOptions": {
        "types": ["./worker-configuration.d.ts", "node"],
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@models/*": ["src/models/*"],
            "@actions": ["src/server/actions"],
            "@schemas": ["src/server/db/schemas"],
            "@styles/*": ["src/styles/*"],
            "@utils/*": ["src/utils/*"]
        }
    }
}
