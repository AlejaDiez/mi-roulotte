{
    "name": "mi-roulotte",
    "version": "1.0.0",
    "description": "A website dedicated to sharing my travel experiences with my family and our caravan.",
    "homepage": "https://miroulotte.es",
    "repository": {
        "type": "git",
        "url": "https://github.com/AlejaDiez/mi-roulotte"
    },
    "license": "CC-A-NC-SA-4.0",
    "author": "Alejandro Diez Bermejo",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "preview": "astro build && wrangler dev",
        "deploy": "astro build && wrangler deploy",
        "cf-typegen": "wrangler types",
        "db:generate": "drizzle-kit generate --name=migration",
        "db:migrate:local": "wrangler d1 migrations apply mi-roulotte-db --local",
        "db:migrate:remote": "wrangler d1 migrations apply mi-roulotte-db --remote",
        "db:studio:local": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
        "db:studio:remote": "source .env && drizzle-kit studio"
    },
    "dependencies": {
        "@astrojs/cloudflare": "^12.6.6",
        "@tailwindcss/vite": "^4.1.12",
        "astro": "^5.13.4",
        "bcryptjs": "^3.0.2",
        "drizzle-orm": "^0.44.5",
        "jose": "^6.1.0",
        "lightningcss": "^1.30.1",
        "prosemirror-commands": "^1.7.1",
        "prosemirror-keymap": "^1.2.3",
        "prosemirror-model": "^1.25.3",
        "prosemirror-schema-basic": "^1.2.4",
        "prosemirror-state": "^1.4.3",
        "prosemirror-view": "^1.40.1",
        "resend": "^6.0.1",
        "sortablejs": "^1.15.6",
        "tailwindcss": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^24.3.0",
        "@types/sortablejs": "^1.15.8",
        "@types/youtube": "^0.1.2",
        "better-sqlite3": "^12.2.0",
        "cross-env": "^10.0.0",
        "drizzle-kit": "^0.31.4",
        "prettier": "^3.6.2",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-css-order": "^2.1.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "wrangler": "^4.33.0"
    }
}
